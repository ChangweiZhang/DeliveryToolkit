<Application x:Class="DeliveryToolkit.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DeliveryToolkit"
             StartupUri="MainWindow.xaml"
             xmlns:vm="clr-namespace:DeliveryToolkit.ViewModel" xmlns:model="clr-namespace:DeliveryToolkit.Model">
    <Application.Resources>
        <ResourceDictionary>
            <model:ScreenInfo x:Key="ScreenInfo"></model:ScreenInfo>
            <vm:ViewModelLocator x:Key="Locator"></vm:ViewModelLocator>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Panuon.UI.Silver;component/Control.xaml" />
                <ResourceDictionary Source="/Style/BaseStyle.xaml"/>
                <ResourceDictionary Source="/Style/ShowControl.xaml"/>
                <ResourceDictionary Source="/Style/Converter.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
